{% extends "common/layout/base-page.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% block backLinkBlock %}
{% endblock %}
{% block pageContent %}
    {{ govukPanel({
        titleText: heading
    }) }}
    <p class='govuk-body'>{{ message | safe }}</p>
    <p>{{ govukButton({
        text: backLinkText,
        href: backLink,
        attributes: {
            "data-nav": true,
            "data-link": backLink
        }
    }) }}</p>
{% endblock %}