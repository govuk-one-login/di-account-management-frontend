{% extends "common/layout/base-page.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% set pageTitleName = 'pages.changePhoneNumber.noUkPhoneNumber.title' | translate %}
{% set detailBlockParagraphs %}
  <p>{{ 'pages.changePhoneNumber.noUkPhoneNumber.detailTextLine1' | translate }}</p>
  <p>{{ 'pages.changePhoneNumber.noUkPhoneNumber.detailTextLine2' | translate }}</p>
  <p>{{ 'pages.changePhoneNumber.noUkPhoneNumber.detailTextLine3' | translate }}</p>
{% endset %}

{% block pageContent %}
  <h1 class="govuk-heading-l">{{ 'pages.changePhoneNumber.noUkPhoneNumber.header' | translate }}</h1>

  <p class="govuk-body">{{ 'pages.changePhoneNumber.noUkPhoneNumber.paragraph1' | translate }}</p>

  <h2 class="govuk-heading-m">{{ 'pages.changePhoneNumber.noUkPhoneNumber.sub-header' | translate }}</h2>

  {% if hasAuthApp %}
    <p class="govuk-body">{{ 'pages.changePhoneNumber.noUkPhoneNumber.paragraph2hasAuthApp' | translate }}</p>
  {% else %}
    <p class="govuk-body">{{ 'pages.changePhoneNumber.noUkPhoneNumber.paragraph2' | translate }}</p>
  {% endif %}


  {% if hasAuthApp %}
    <p class="govuk-body">{{ 'pages.changePhoneNumber.noUkPhoneNumber.hasAuthApp' | translate }}</p>
    <p class="govuk-body">{{ 'pages.changePhoneNumber.noUkPhoneNumber.useDifferentAuthApp' | translate }}</p>
  {% elif hasBackupAuthApp %}
    <p class="govuk-body">{{ 'pages.changePhoneNumber.noUkPhoneNumber.paragraph3hasBackupAuthAppp' | translate }}</p>
  {% else %}
    {{ govukDetails({
      summaryText: 'pages.changePhoneNumber.noUkPhoneNumber.detailSummary' | translate,
      html: detailBlockParagraphs
    }) }}

    <p class="govuk-body">{{ 'pages.changePhoneNumber.noUkPhoneNumber.paragraph3' | translate }}</p>
  {% endif %}


  <ol class="govuk-list govuk-list--number">
    <li >{{ 'pages.changePhoneNumber.noUkPhoneNumber.listItem1' | translate | safe}}</li>
    {% if hasAuthApp %}
      <li >{{ 'pages.changePhoneNumber.noUkPhoneNumber.ListItem2hasAuthApp' | translate | safe }}</li>
    {% elif hasBackupAuthApp %}
      <li >{{ 'pages.changePhoneNumber.noUkPhoneNumber.listItem2hasBackupAuthApp' | translate | safe }}</li>
    {% else %}
      <li >{{ 'pages.changePhoneNumber.noUkPhoneNumber.listItem2' | translate | safe }}</li>
    {% endif %}
  </ol>

  {{ govukButton({
    text: 'pages.changePhoneNumber.noUkPhoneNumber.backLinkButton' | translate,
    href:  "SECURITY" | getPath
  }) }}
{% endblock %}
