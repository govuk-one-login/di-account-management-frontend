{
  "compilerOptions": {
    "module": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    // do not check types in node_modules folder
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["@types", "/node_modules/@types"]
  },
  "exclude": [
    "test",
    "coverage",
    "src/components/**/tests",
    "src/utils/test",
    "integration-tests"
  ]
}
