{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["../@types", "../node_modules/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": [
    "../coverage",
    "../dist",
    "../**/*.js",
    "./post-deploy-tests/.features-gen",
    "../eslint.config.mjs"
  ]
}
