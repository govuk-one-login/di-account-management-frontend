{
  "name": "integration-tests",
  "version": "1.0.0",
  "scripts": {
    "run-app": "cd ../ && if [ -e .env.integration-tests ]; then docker compose --env-file ./.env.integration-tests build && docker compose --env-file ./.env.integration-tests up; else docker compose build && docker compose up; fi",
    "build": "docker build -t di-account-management-frontend-integration-test .",
    "install-browsers": "playwright install --with-deps chromium",
    "start-test-server": "npm run build && docker run --network=host --rm --init di-account-management-frontend-integration-test run-server",
    "watch": "nodemon -w ./tests -w ./utils -w ./.env.ts -w ./.env -e \"*\" --exec \"bddgen\"",
    "test": "npm ci && bddgen && playwright test",
    "test:update-snapshots": "sh update-snapshots.sh",
    "test:ui": "npm ci && run-p test:ui:*",
    "test:ui:watch": "npm run watch",
    "test:ui:run": "playwright test --ui",
    "lint": "eslint . --report-unused-disable-directives",
    "lint:fix": "eslint . --fix --report-unused-disable-directives",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.8.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-plugin-playwright": "^2.2.2",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "playwright-bdd": "^8.4.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "valibot": "^1.1.0"
  }
}
